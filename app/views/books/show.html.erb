<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!--User info-->
      <h2>User info</h2>
      
      <!--New Book-->
      <h2>New Book</h2>
      <%= render "form", book: @book %>
    </div>
    <div class="col-xs-9">
      <!--Books detail-->
      <h2>Books detail</h2>
      <table>
      <tr>
        <td>
          <% link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image_id, :fill, 100, 100, fallback: "Ruby.png" )%>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, daata: { confirm: "本当に消しますか?" }, class: "btn btn-sm btn-danger" %></td>
        <% end %>
      </tr>
    </table>
    </div>
  </div>
</div>


